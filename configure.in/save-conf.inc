#!/bin/sh
#***********************************************************************
# Save some values for later usage -> required by mkconfig only        *
#***********************************************************************

TMPFILE="conf.tmp"

cat > $TMPFILE << EOF

# !!! WARNING !!! WARNING !!! WARNING !!! WARNING !!!
# ******** Compiled-in values - DO NOT EDIT! ********
# These values were generated during the compilation,
# changing them here could lead to unforeseen errors!
HOMEDIR="$PKGDIR"
BREAK="$BREAK"
PATRN=$PATRN
SPAWN="$fd_spn"
SPLIT=$SPLIT
UIDA="$UIDA"
UIDD="$UIDD"
UIDL="$UIDL"
UIDO="$UIDO"
UIDP="$UIDP"
UIDQ="$UIDQ"
UIDR="$UIDR"
UIDS="$UIDS"
GIDQ="$GIDQ"
GIDN="$GIDN"
EOF

# This is required by mkconfig
TLS=`cat conf-build | grep DISABLE_TLS | cut -d= -f2`
[ "$TLS" ] && [ "$TLS" = "1" ] && echo "TLS=\"No\"" >> conf.tmp || echo "TLS=\"Yes\"" >> conf.tmp
echo "# ************ end autogenerated values *************" >> conf.tmp
