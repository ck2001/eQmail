#!/bin/sh
# WARNING: This file was auto-generated. Do not edit!
  DOMAIN=$(echo `hostname -f` | cut -d. -f2- | tr '[A-Z]' '[a-z]')
  HOST=$(echo `hostname -f` | cut -d. -f1 | tr '[A-Z]' '[a-z]')

  [ -f /usr/local/qmail/control/me ] || (
	echo Putting "$HOST.$DOMAIN" into control/me...
    echo "$HOST.$DOMAIN" > /usr/local/qmail/control/me
    chmod 644 /usr/local/qmail/control/me
  )

  [ -f /usr/local/qmail/control/defaultdomain ] || (
    echo Putting "$DOMAIN" into control/defaultdomain...
    echo "$DOMAIN" > /usr/local/qmail/control/defaultdomain
    chmod 644 /usr/local/qmail/control/defaultdomain
  )

  [ -f /usr/local/qmail/control/plusdomain ] || (
    echo Putting "$DOMAIN" into control/plusdomain...
    echo "$DOMAIN" > /usr/local/qmail/control/plusdomain
    chmod 644 /usr/local/qmail/control/plusdomain
  )

  [ -f /usr/local/qmail/control/locals ] || (
	echo ' '
	echo Adding "$HOST.$DOMAIN" to control/locals...
	echo "$HOST.$DOMAIN" >> /usr/local/qmail/control/locals
  )
  echo ' '
  echo If there are any other domain names that point to you,
  echo you will have to add them to /usr/local/qmail/control/locals.
  echo You don\'t have to worry about aliases, i.e., domains with CNAME records.
  echo ' '

  [ -f /usr/local/qmail/control/rcpthosts ] || (
	echo Copying /usr/local/qmail/control/locals to /usr/local/qmail/control/rcpthosts...
	cp /usr/local/qmail/control/locals /usr/local/qmail/control/rcpthosts
	chmod 644 /usr/local/qmail/control/rcpthosts
  )
  echo 'Now qmail will refuse to accept SMTP messages except to those hosts.'
  echo 'Make sure to change rcpthosts if you add hosts to locals or virtualdomains!'

. ./config-spp
. ./config-bfrmt
