#!/bin/sh
# WARNING: This file was auto-generated. Do not edit!

# create control/smtpplugins
[ -f /usr/local/qmail/control/smtpplugins ] || \
( echo "Creating empty smtpplugins config file..."
printf "
# config file for qmail-spp\n#\n
# pathes are relativ to /usr/local/qmail\n#\n" > /usr/local/qmail/control/smtpplugins
printf "[connection]\n\n[helo]\n\n[mail]\n\n[rcpt]\n\n[data]\n\n#[auth]\n" \
       >> /usr/local/qmail/control/smtpplugins
chown root:qmail /usr/local/qmail/control/smtpplugins
chmod 644 /usr/local/qmail/control/smtpplugins	)

mkdir -p /usr/local/qmail/bin/plugins
chgrp qmail /usr/local/qmail/bin/plugins
