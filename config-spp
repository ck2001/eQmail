#!/bin/sh
# WARNING: This file was auto-generated. Do not edit!

# create control/smtpplugins
[ -f /var/qmail/control/smtpplugins ] || \
( echo "Creating empty smtpplugins config file..."
printf "
# config file for qmail-spp\n#\n
# pathes are relativ to /var/qmail\n#\n" > /var/qmail/control/smtpplugins
printf "[connection]\n\n[helo]\n\n[mail]\n\n[rcpt]\n\n[data]\n\n#[auth]\n" \
       >> /var/qmail/control/smtpplugins
chown root:qmail /var/qmail/control/smtpplugins
chmod 644 /var/qmail/control/smtpplugins	)

mkdir -p /var/qmail/bin/plugins
chgrp qmail /var/qmail/bin/plugins
